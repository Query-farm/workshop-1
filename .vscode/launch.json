{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug DuckDB Shell",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/duckdb",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Debug",
      "stopOnEntry": false
    },
    {
      "name": "Debug DuckDB with SQL file",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/duckdb",
      "args": ["-c", ".read ${input:sqlFile}"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Debug",
      "stopOnEntry": false
    },
    {
      "name": "Debug Unit Tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/test/unittest",
      "args": ["--test-dir", "${workspaceFolder}", "[workshop]"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Debug",
      "stopOnEntry": false
    },
    {
      "name": "Attach to Process",
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickProcess}"
    }
  ],
  "inputs": [
    {
      "id": "sqlFile",
      "type": "promptString",
      "description": "Path to SQL file to execute",
      "default": "test.sql"
    }
  ]
}
